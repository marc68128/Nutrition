<UserControl x:Class="Nutrition.Wpf.Views.UserControls.UCLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="Black" Opacity="0.7"></Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Loading..." Foreground="White" FontSize="30" HorizontalAlignment="Center"></TextBlock>
            <ProgressBar IsIndeterminate="True" Margin="10" MinWidth="300"></ProgressBar>
        </StackPanel>
    </Grid>
</UserControl>
